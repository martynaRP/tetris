<suite name="TetrisSuite" time-out="10000" verbose="1">
    <test name="CompleteTests">
        <groups>
            <run>
                <include name="Block"/>
                <include name="Player"/>
                <include name="Game"/>
                <include name="CommandLineAnalyst"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.block.LBlockTest"/>
            <class name="com.epam.prejap.tetris.block.BlockFeedTest"/>
            <class name="com.epam.prejap.tetris.player.RandomPlayerTest"/>
            <class name="com.epam.prejap.tetris.game.MoveTest"/>
            <class name="com.epam.prejap.tetris.analyst.CommandLineAnalyst"/>
        </classes>
    </test>
</suite>
